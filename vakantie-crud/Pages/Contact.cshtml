@page
@model vakantie_crud.Pages.ContactModel
@{
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-6">
            <h2>Contact</h2>
            <form id="contactForm">
                <div class="mb-3">
                    <label for="nameInput" class="form-label">Naam</label>
                    <input type="text" class="form-control" id="nameInput" placeholder="Voer uw naam in">
                </div>
                <div class="mb-3">
                    <label for="emailInput" class="form-label">E-mailadres</label>
                    <input type="email" class="form-control" id="emailInput" placeholder="Voer uw e-mailadres in">
                </div>
                <div class="mb-3">
                    <label for="messageInput" class="form-label">Bericht</label>
                    <textarea class="form-control" id="messageInput" rows="5" placeholder="Voer uw bericht in"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Verzenden</button>
            </form>
        </div>
        <div class="col-lg-6">
            <h2>Locatie</h2>
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2482.366326805844!2d-0.12762568406840616!3d51.50732106261083!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zM5PCsDU0JzI3LjkiTiAwwrAwMic1Ny41Ilc!5e0!3m2!1sen!2suk!4v1623776569448!5m2!1sen!2suk" width="100%" height="300" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>
    </div>
</div>

<div class="container mt-5">
    <h2 class="mb-4">Meer hulp nodig?</h2>
    <div class="row">
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card">
                <div class="card-body bg-light">
                    <h5 class="card-title">
                        <i class="fas fa-question-circle mr-2"></i> Veelgestelde vragen
                    </h5>
                    <p class="card-text">Bekijk de antwoorden op veelgestelde vragen van onze klanten.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card">
                <div class="card-body bg-light">
                    <h5 class="card-title">
                        <i class="fas fa-phone mr-2"></i> Klantenservice
                    </h5>
                    <p class="card-text">Neem contact op met onze klantenservice voor persoonlijke ondersteuning.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card">
                <div class="card-body bg-light">
                    <h5 class="card-title">
                        <i class="fas fa-envelope mr-2"></i> Stuur een e-mail
                    </h5>
                    <p class="card-text">Stuur ons een e-mail met uw vragen of opmerkingen.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card">
                <div class="card-body bg-light">
                    <h5 class="card-title">
                        <i class="fas fa-comments mr-2"></i> Live chat
                    </h5>
                    <p class="card-text">Chat in realtime met een van onze medewerkers voor directe hulp.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card">
                <div class="card-body bg-light">
                    <h5 class="card-title">
                        <i class="fas fa-file-alt mr-2"></i> Documentatie
                    </h5>
                    <p class="card-text">Raadpleeg onze uitgebreide documentatie voor gedetailleerde informatie.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card">
                <div class="card-body bg-light">
                    <h5 class="card-title">
                        <i class="fas fa-video mr-2"></i> Videotutorials
                    </h5>
                    <p class="card-text">Bekijk onze handige videotutorials om u te helpen bij het gebruik van onze diensten.</p>
                </div>
            </div>
        </div>
    </div>
</div>

